@model IEnumerable<JoiningTablesImplementation.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <p>
        <b> Search </b> @Html.TextBox("search")
        <input type="submit" value="Search" />
    </p>
}
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stdNum)
        </th>
        <th></th>
    </tr>


    <tbody>
        @if (Model.Count() == 0)
        {
            <p>
                <h1>
                    No  Match Found!

                </h1>
            </p>
        }

        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StdName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stdNum)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.StdId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.StdId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.StdId })
                    </td>
                </tr>
            }


        }
    </tbody>


</table>
